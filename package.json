{
  "name": "project-synapse",
  "version": "0.1.0",
  "private": true,
  "description": "Physical control layer for deterministic UI agents and multi-LLM orchestration via Logitech Actions SDK",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm build && pnpm -r --filter=!synapse-config-ui test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm --filter synapse-core-daemon dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "typescript": "^5.4.5"
  }
}
